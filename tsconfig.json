{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "allowJs": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "types" : ["node"]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    // "strictInjectionParameters": true,
    // "enableIvy" : false
  },
  "exclude": ["**/node_modules/*", "dist"]
}
